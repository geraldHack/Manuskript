<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.manuskript.MainController">
   <center>
      <!-- Haupt-Container -->
      <VBox spacing="10">
         <children>
      <!-- Verzeichnis-Auswahl -->
      <HBox spacing="10" alignment="CENTER_LEFT">
         <children>
            <Label text="Verzeichnis:" />
            <TextField fx:id="txtDirectoryPath" promptText="Wählen Sie ein Verzeichnis mit DOCX-Dateien" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnSelectDirectory" text="Verzeichnis auswählen" />
            <Button fx:id="btnSplit" text="Kapitel-Split" prefWidth="120.0" />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      
      <!-- Downloads-Monitor -->
       <HBox spacing="10" alignment="CENTER_LEFT">
          <children>
             <CheckBox fx:id="chkDownloadsMonitor" text="📥 Downloads-Monitor: Neue Dateien automatisch überwachen" styleClass="downloads-monitor-checkbox" />
          </children>
          <padding>
             <Insets bottom="5.0" left="10.0" right="10.0" />
          </padding>
       </HBox>
      
      <!-- Filter und Sortierung entfernt - einfache Lösung -->
      
      <!-- Zwei Tabellen nebeneinander -->
      <HBox spacing="10" VBox.vgrow="ALWAYS">
         <children>
            <!-- Linke Tabelle: Verfügbare Dateien -->
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Verfügbare Dateien:" styleClass="section-header" />
                  <TableView fx:id="tableViewAvailable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colFileNameAvailable" text="Dateiname" prefWidth="200.0" />
                      <TableColumn fx:id="colFileSizeAvailable" text="Größe" prefWidth="80.0" />
                      <TableColumn fx:id="colLastModifiedAvailable" text="Geändert" prefWidth="120.0" />
                    </columns>
                  </TableView>
               </children>
            </VBox>
            
            <!-- Mittlere Buttons -->
            <VBox spacing="10" alignment="CENTER">
               <children>
                  <Button fx:id="btnAddToSelected" text="→" prefWidth="60.0" prefHeight="40.0" minWidth="60.0" minHeight="40.0" />
                  <Button fx:id="btnRemoveFromSelected" text="←" prefWidth="60.0" prefHeight="40.0" minWidth="60.0" minHeight="40.0" />
               </children>
            </VBox>
            
            <!-- Rechte Tabelle: Ausgewählte Dateien -->
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Ausgewählte Dateien:" styleClass="section-header" />
                  <Label text="Datei verschieben mit CTRL-Pfeiltaste" styleClass="info-text" />
                  <Label text="Extern geänderte Dateien werden mit einem ! markiert" styleClass="info-text" />
                  <TableView fx:id="tableViewSelected" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colFileNameSelected" text="Dateiname" prefWidth="200.0" />
                      <TableColumn fx:id="colFileSizeSelected" text="Größe" prefWidth="80.0" />
                      <TableColumn fx:id="colLastModifiedSelected" text="Geändert" prefWidth="120.0" />
                    </columns>
                  </TableView>

               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" />
         </padding>
      </HBox>
      
      <!-- Aktions-Buttons -->
      <HBox spacing="10" alignment="CENTER_LEFT">
         <children>
            <Region HBox.hgrow="ALWAYS" style="-fx-background-color: transparent;" />
            <Button fx:id="btnThemeToggle" text="☀" prefWidth="50.0" prefHeight="35.0">
                <tooltip>
                   <Tooltip text="Theme wechseln" />
                </tooltip>
             </Button>
            
            <Button fx:id="btnProcessSelected" text="Buch exportieren" prefWidth="200.0" />
            <Button fx:id="btnNewChapter" text="Neues Kapitel erstellen" prefWidth="180.0" />
            <Button fx:id="btnProcessAll" text="Kapitel bearbeiten" prefWidth="150.0" />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" />
         </padding>
      </HBox>
         </children>
      </VBox>
   </center>
</BorderPane> 