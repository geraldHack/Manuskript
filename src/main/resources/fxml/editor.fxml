<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="mainContainer" spacing="0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.manuskript.EditorWindow">
   <children>
      <!-- Toolbar -->
      <HBox spacing="5" styleClass="toolbar" style="-fx-min-height: 40px;">
         <children>
            <Button fx:id="btnNew" text="Neu" styleClass="button primary" />
            <Button fx:id="btnOpen" text="Öffnen" styleClass="button primary" />
            <Button fx:id="btnSave" text="Speichern" styleClass="button primary" />
            <Button fx:id="btnSaveAs" text="Speichern als..." styleClass="button primary" />
            <Button fx:id="btnExportRTF" text="Als RTF exportieren" styleClass="button" />
            <Button fx:id="btnExportDOCX" text="Als DOCX exportieren" styleClass="button" />
            
            <Separator orientation="VERTICAL" />
            
            <Button fx:id="btnToggleSearch" text="Suchen/Ersetzen" styleClass="button" />
            <Button fx:id="btnToggleMacro" text="Makros" styleClass="button" />
            <Button fx:id="btnTextAnalysis" text="Textanalyse" styleClass="button" />
            <Button fx:id="btnChapterEditor" text="📝 Kapitel" styleClass="button" />
            <Button fx:id="btnKIAssistant" text="🤖 KI-Assistent" styleClass="button" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Label fx:id="lblStatus" text="Bereit" styleClass="status-label" />
         </children>
         <padding>
            <Insets top="8.0" bottom="8.0" left="10.0" right="10.0" />
         </padding>
      </HBox>
      
      <!-- NEU: Titelbalken mit Dateinamen -->
      <HBox spacing="5" styleClass="title-bar" style="-fx-min-height: 35px; -fx-background-color: #2c3e50; -fx-border-color: #34495e; -fx-border-width: 0 0 1 0;">
         <children>
            <Label fx:id="lblWindowTitle" text="📄 Dokument" styleClass="window-title-label" style="-fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets top="8.0" bottom="8.0" left="15.0" right="15.0" />
         </padding>
      </HBox>
      
      <!-- Neue einfache Toolbar für Textgröße -->
      <HBox spacing="5" styleClass="font-toolbar" style="-fx-min-height: 30px;">
         <children>
            <Label text="Textgröße:" styleClass="font-size-label" />
            <ComboBox fx:id="cmbFontSize" promptText="12" prefWidth="80.0" />
            <Button fx:id="btnIncreaseFont" text="A+" styleClass="toolbar-button" style="-fx-min-width: 45px; -fx-max-width: 45px;" />
            <Button fx:id="btnDecreaseFont" text="A-" styleClass="toolbar-button" style="-fx-min-width: 45px; -fx-max-width: 45px;" />
            
            <Separator orientation="VERTICAL" style="-fx-background-color: #6c757d;" />
            
            <Button fx:id="btnBold" text="B" styleClass="toolbar-button" style="-fx-min-width: 35px; -fx-max-width: 35px; -fx-font-weight: bold; -fx-font-size: 14px;" />
            <Button fx:id="btnItalic" text="I" styleClass="toolbar-button" style="-fx-min-width: 35px; -fx-max-width: 35px; -fx-font-style: italic; -fx-font-size: 14px;" />
            
            <Separator orientation="VERTICAL" style="-fx-background-color: #6c757d;" />
            
            <Button fx:id="btnThemeToggle" text="🎨" styleClass="toolbar-button" style="-fx-min-width: 45px; -fx-max-width: 45px; -fx-font-size: 18px;" />
            <ComboBox fx:id="cmbQuoteStyle" promptText="Anführungszeichen" prefWidth="220.0" />
            
            <Separator orientation="VERTICAL" style="-fx-background-color: #6c757d;" />
            
            <Button fx:id="btnUndo" text="↶" styleClass="toolbar-button" style="-fx-min-width: 35px; -fx-max-width: 35px; -fx-font-size: 16px;" />
            <Button fx:id="btnRedo" text="↷" styleClass="toolbar-button" style="-fx-min-width: 35px; -fx-max-width: 35px; -fx-font-size: 16px;" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Separator orientation="VERTICAL" style="-fx-background-color: #6c757d;" />
            
            <Button fx:id="btnPreviousChapter" text="◀ Vorheriges Kapitel" styleClass="toolbar-button" style="-fx-min-width: 140px; -fx-max-width: 140px;" />
            <Button fx:id="btnNextChapter" text="Nächstes Kapitel ▶" styleClass="toolbar-button" style="-fx-min-width: 140px; -fx-max-width: 140px;" />
         </children>
         <padding>
            <Insets top="5.0" bottom="5.0" left="10.0" right="10.0" />
         </padding>
      </HBox>
      
      <!-- Such- und Ersetzungs-Panel -->
      <VBox fx:id="searchReplacePanel" spacing="10" styleClass="search-replace-panel">
         <children>
            <!-- Erste Zeile: Suchfelder -->
            <HBox spacing="10" alignment="CENTER_LEFT">
               <children>
                  <Label text="Suchen:" styleClass="search-label" />
                  <ComboBox fx:id="cmbSearchHistory" promptText="Suchtext eingeben..." prefWidth="250.0" editable="true" />
                  
                  <VBox spacing="2" alignment="CENTER">
                     <Button fx:id="btnSaveSearch" text="Pattern speichern" styleClass="button primary" />
                     <Button fx:id="btnDeleteSearch" text="Pattern löschen" styleClass="button danger" />
                  </VBox>
                  
                  <Label text="Ersetzen:" styleClass="search-label" />
                  <ComboBox fx:id="cmbReplaceHistory" promptText="Ersetzungstext eingeben..." prefWidth="250.0" editable="true" />
                  
                  <VBox spacing="2" alignment="CENTER">
                     <Button fx:id="btnSaveReplace" text="Pattern speichern" styleClass="button primary" />
                     <Button fx:id="btnDeleteReplace" text="Pattern löschen" styleClass="button danger" />
                  </VBox>
               </children>
            </HBox>
            
            <!-- Zweite Zeile: Optionen und Buttons -->
            <HBox spacing="10" alignment="CENTER_LEFT">
               <children>
                  <CheckBox fx:id="chkRegexSearch" text="Regex" selected="false" />
                  <CheckBox fx:id="chkCaseSensitive" text="Groß-/Kleinschreibung" selected="false" />
                  <CheckBox fx:id="chkWholeWord" text="Ganzes Wort" selected="false" />
                  
                  <Button fx:id="btnRegexHelp" text="?" styleClass="button" style="-fx-min-width: 25px; -fx-max-width: 25px; -fx-min-height: 25px; -fx-max-height: 25px; -fx-font-weight: bold;" />
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <Button fx:id="btnFindPrevious" text="↑ Vorheriger" styleClass="button" />
                  <Button fx:id="btnFindNext" text="↓ Nächster" styleClass="button" />
                  <Button fx:id="btnFind" text="Suchen" styleClass="button primary" />
                  <Button fx:id="btnReplace" text="Ersetzen" styleClass="button primary" />
                  <Button fx:id="btnReplaceAll" text="Alle ersetzen" styleClass="button primary" />
                  
                  <Label fx:id="lblMatchCount" text="" styleClass="match-count-label" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </VBox>
      
      <!-- SplitPane für Chapter-Editor und Haupt-Editor -->
      <SplitPane fx:id="mainSplitPane" dividerPositions="0.05" visible="true" managed="true" VBox.vgrow="ALWAYS" orientation="VERTICAL">
         <VBox fx:id="chapterEditorPanel" styleClass="chapter-editor-panel" minHeight="30" prefHeight="30">
            <children>
               <HBox spacing="5" styleClass="chapter-editor-header" style="-fx-min-height: 30px;">
                  <children>
                     <Label text="📝 Chapter-Beschreibung" styleClass="chapter-editor-title" />
                     <Region HBox.hgrow="ALWAYS" />
                     <Button fx:id="btnSaveChapter" text="💾 Speichern" styleClass="button" style="-fx-min-width: 120px; -fx-max-width: 120px;" />
                  </children>
                  <padding>
                     <Insets top="5.0" bottom="5.0" left="10.0" right="10.0" />
                  </padding>
               </HBox>
               <TextArea fx:id="chapterEditorArea" promptText="Kapitelbeschreibung und Szenen hier eingeben..." wrapText="true" VBox.vgrow="ALWAYS" visible="false" managed="false" styleClass="chapter-editor-text-area" />
            </children>
            <padding>
               <Insets top="5.0" bottom="5.0" left="5.0" right="5.0" />
            </padding>
         </VBox>
         
         <VBox fx:id="textAreaContainer" minHeight="200" VBox.vgrow="ALWAYS" />
      </SplitPane>
   </children>
</VBox>